<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- customize report layout for din5008 format -->
        <template inherit_id="l10n_de.external_layout_din5008" id="expense_calculation_external_layout_din5008">
           <xpath expr="//h2" position="replace">
                 <t t-if="doc_model == 'hr.expense'">
                    <h2>
                        <span>Customer Journey</span>
                    </h2>
                </t>
                <t t-else="1">
                    <h2>
                        <span t-if="not o">
                            <t t-esc="company.l10n_de_document_title"/>
                        </span>
                        <span t-elif="'l10n_de_document_title' in o">
                            <t t-esc="o.l10n_de_document_title"/>
                        </span>
                        <span t-else="" t-field="o.name"/>
                    </h2>
                </t>
            </xpath>
        </template>
    </data>
</odoo>
